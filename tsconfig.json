{
  "compilerOptions": {
    "lib": ["es6", "dom", "scripthost", "es2015.symbol"],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["src/*"],
      "@/packages/*": ["packages/*"],
      "edith-jest": ["packages/edith-jest"],
      "edith-jest/*": ["packages/edith-jest/*"],
      "edith-runtime": ["packages/edith-runtime"],
      "edith-runtime/*": ["packages/edith-runtime/*"],
      "edith-vscode": ["packages/edith-vscode"],
      "edith-types/*": ["packages/edith-types/*"],
      "edith-types": ["packages/edith-types"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}
